<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gb.pavelkorzhenko.cryptostockviewer.CryptoStockViewer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textHeader"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="textHeader" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleListView"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scrollbars="vertical"
            android:layout_gravity="center_horizontal"
            android:scrollbarAlwaysDrawHorizontalTrack="true">

        </android.support.v7.widget.RecyclerView>

        <EditText
            android:id="@+id/backEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/backEditHint"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hdrCheckBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hdrCheckBoxes"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:text="Text4CheckBoxes" />

        <GridLayout
            android:id="@+id/grdCheckBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            android:columnCount="3"
            android:layout_gravity="center_vertical"
            android:rowCount="1">

            <CheckBox
                android:id="@+id/chkNoGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="@string/noGraphStr"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/chkNoShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_gravity="center_vertical"
                android:text="@string/noShareStr"
                android:textAlignment="center"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/chkNoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="center_vertical"
                android:layout_row="0"
                android:text="@string/noBackStr"
                android:textAlignment="center"
                android:textSize="18sp" />

        </GridLayout>

        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graphs"
            android:textAlignment="center" />
        <com.jjoe64.graphview.GraphView
            android:id="@+id/imgGraphID"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:srcCompat="@android:color/background_light"/> -->

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
